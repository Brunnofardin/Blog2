<h2>Postagens</h2>
{{#each aqv}}
    <!---style="background-image: url({{Imagem}});"--->
    <section  class="card mt-4">

        <div class="card-body">

            <h1 class="form-control">{{Titulo}}</h1>
           
            <p class="form-control">Categoria: {{Categoria}}</p>
            <p class="form-control">Link: <a href="{{Link}}" target="_blank">Acesse Aqui!</a></p>
            <p class="form-control">Postado por: {{Dono}}</p>
            <p class="form-control">Descrição: {{Descricao}}</p>

        </div>

    </section>

{{else}}

    <p class="alert alert-danger">Não há postagens no momento!</p>
    
{{/each}}
<p class="mt-4">
    <a href="/" class="btn btn-danger">Voltar</a>
</p>